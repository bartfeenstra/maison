#!/usr/bin/env bash

cd `dirname "$0"`/..

# Aggregate test exit codes.
exit_code=0
trap '(( exit_code |= $? ))' ERR

username=maisontest
password=bienvenue
htpasswd -b ./nginx/htpasswd $username $password

# Connect to the Unifi controller.
#curl --verbose -f --user $username:$password http://network.maison.bartfeenstra.com > /dev/null
# Connect to OLA.
curl --verbose -f --user $username:$password http://ola.maison.bartfeenstra.com > /dev/null
# Connect to openHAB.
curl --verbose -f --user $username:$password http://hab.maison.bartfeenstra.com > /dev/null
# Connect to Gitea.
curl --verbose -f http://git.maison.bartfeenstra.com > /dev/null
# Connect to Drone.
curl --verbose -f http://ci.maison.bartfeenstra.com > /dev/null

htpasswd -D ./nginx/htpasswd $username

# Stop aggregating test exit codes.
trap - ERR

if [ $exit_code -eq 0 ]
then
    echo "SUCCESS: ALL TESTS PASSED."
else
    echo "ERROR: SOME TESTS FAILED."
fi
exit $exit_code
