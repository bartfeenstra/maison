#!/usr/bin/env bash

cd `dirname "$0"`/..

# Aggregate test exit codes.
exit_code=0
trap '(( exit_code |= $? ))' ERR

username=maisontest
password=bienvenue
htpasswd -b ./nginx/htpasswd $username $password

./bin/start
# Especially openHAB takes a while to start.
sleep 20

# Connect to OLA.
curl -fs --user $username:$password http://ola.maison.bartfeenstra.com > /dev/null
# Connect to openHAB.
curl -fs --user $username:$password http://hab.maison.bartfeenstra.com > /dev/null

./bin/stop

htpasswd -D ./nginx/htpasswd $username

# Stop aggregating test exit codes.
trap - ERR

if [ $exit_code -eq 0 ]
then
    echo "SUCCESS: ALL TESTS PASSED."
else
    echo "ERROR: SOME TESTS FAILED."
fi
exit $exit_code
