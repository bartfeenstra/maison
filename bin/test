#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

function message {
    message=$1
    echo ""
    echo "$message"
    echo ""
}

# Prepare the test environment.
set -a
. .env
MAISON_TEST_HTTP_BASIC_AUTH_USERNAME=maisontest
MAISON_TEST_HTTP_BASIC_AUTH_PASSWORD=bienvenue
set +a
htpasswd -b ./data/services/web/htpasswd "$MAISON_TEST_HTTP_BASIC_AUTH_USERNAME" "$MAISON_TEST_HTTP_BASIC_AUTH_PASSWORD"

# Aggregate test results.
total=0
failures=0
while read -r test; do
    if [ ! -f "$test" ]; then
        continue
    fi
    total=$((total + 1))
    message "Running test $test..."
    if $test; then
        echo "TEST $test PASSED"
     else
        failures=$((failures + 1))
        echo "TEST $test FAILED"
    fi
done < <(find ./tests)

htpasswd -D ./data/services/web/htpasswd "$MAISON_TEST_HTTP_BASIC_AUTH_USERNAME"

if [ $failures -eq 0 ]
then
    message "SUCCESS: $total TEST(S) PASSED."
    exit
else
    message "ERROR: $failures OUT OF $total TEST(S) FAILED."
    exit 1
fi
