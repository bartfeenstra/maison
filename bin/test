#!/usr/bin/env bash

cd `dirname "$0"`/..

# Aggregate test exit codes.
exit_code=0
trap '(( exit_code |= $? ))' ERR

./bin/start
# Especially openHAB takes a while to start.
sleep 9

# Connect to OLA.
curl -fs http://ola.maison.bartfeenstra.com > /dev/null
# Connect to openHAB.
curl -fs http://hab.maison.bartfeenstra.com > /dev/null

./bin/stop

# Stop aggregating test exit codes.
trap - ERR

if [ $exit_code -eq 0 ]
then
    echo "SUCCESS: ALL TESTS PASSED."
else
    echo "ERROR: SOME TESTS FAILED."
fi
exit $exit_code
