#!/usr/bin/env bash

cd `dirname "$0"`/..

# Aggregate test exit codes.
exit_code=0
trap '(( exit_code |= $? ))' ERR

./bin/build
./bin/run
sleep 3

# Connect to Alfred.
curl -fs http://maison.bartfeenstra.com/api/about/json/schema > /dev/null
# Connect to the Alfred client.
curl -fs http://maison.bartfeenstra.com > /dev/null

./bin/stop

# Stop aggregating test exit codes.
trap - ERR

if [ $exit_code -eq 0 ]
then
    echo "SUCCESS: ALL TESTS PASSED."
else
    echo "ERROR: SOME TESTS FAILED."
fi
exit $exit_code
