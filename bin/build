#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

# Set up Krab.
mkdir -p ./vendor/bin
if [ ! -f ./vendor/bin/krab ]; then
    curl https://raw.githubusercontent.com/bartfeenstra/krab/0.1/krab > ./vendor/bin/krab
fi
chmod ugo+rx ./vendor/bin/krab

find ./build | grep '^\./build/[^/]*' | xargs ./vendor/bin/krab run
