#!/usr/bin/env bash

cd `dirname "$0"`/..

# Build alfred.
pushd ./alfred
if [ -d ./app ]
then
    pushd ./app
    git reset --hard
    git clean -df
    git checkout master
    git pull
    popd
else
    git clone --branch master https://github.com/bartfeenstra/alfred.git app
fi
popd

# Build alfred-client.
pushd ./alfred-client
if [ -d ./app ]
then
    pushd ./app
    git reset --hard
    git clean -df
    git checkout master
    git pull
    popd
else
    git clone --branch master https://github.com/bartfeenstra/alfred-client.git app
fi
popd

docker-compose build
