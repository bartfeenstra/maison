#!/usr/bin/env bash

cd `dirname "$0"`/..

# Exit on errors
exit_code=0
trap 'exit $?' ERR

if [ ! -f ./.env ]; then
    cp ./.env.dist ./.env
    echo "Maison is being built for the first time. Update the configuration at `readlink -f ./.env` and run this command (./bin/build) again to finish the build."
    exit 1
fi
mkdir -p ./db/data
mkdir -p ./monitor/data
mkdir -p ./network/data
mkdir -p ./search/data
mkdir -p ./web/data
touch ./web/data/htpasswd
mkdir -p ./web/data/letsencrypt
sudo cp ./ola/ftdi.rules /etc/udev/rules.d/

sudo groupadd -f -g 9001 openhab
id -u openhab &>/dev/null || sudo useradd -u 9001 -g openhab -r -s /sbin/nologin openhab && sudo usermod -a -G openhab `whoami`

docker-compose -p maison build $@

# Stop aggregating build step exit codes.
trap - ERR

if [ $exit_code -eq 0 ]
then
    echo "SUCCESS: ALL BUILD STEPS PASSED."
else
    echo "ERROR: SOME BUILD STEPS FAILED."
fi
exit $exit_code
