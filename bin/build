#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

# Set up Krab.
mkdir -p ./vendor
if [ ! -d ./vendor/krab ]; then
    git clone https://github.com/bartfeenstra/krab.git ./vendor/krab
    chmod ugo+rx ./vendor/krab/bin/krab
fi
git -C ./vendor/krab fetch -f
git -C ./vendor/krab checkout 0.2

find ./build | grep '^\./build/[^/]*' | xargs readlink -f | xargs ./vendor/krab/bin/krab run
