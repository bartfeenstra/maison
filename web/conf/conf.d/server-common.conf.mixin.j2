{% if MAISON_WEB_PROTOCOL == 'https' %}
    listen 443 ssl http2;
    ssl_certificate /etc/letsencrypt/live/$maison_domain/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/$maison_domain/privkey.pem;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
{% else %}
    listen 80;
{% endif %}

location = /favicon.ico {
    log_not_found off;
}
